<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="470.0" prefWidth="400.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iit.cm2601.teammate.RegisterParticipantController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <Label text="Register Participant">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <GridPane hgap="10.0" vgap="8.0">
            <columnConstraints>
                <ColumnConstraints percentWidth="30" />
                <ColumnConstraints percentWidth="70" />
            </columnConstraints>

            <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Preferred Game:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="gameCombo" prefHeight="25.0" prefWidth="124.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Skill Level (1-10):" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <Spinner fx:id="skillSpinner" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Preferred Role:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <ComboBox fx:id="roleCombo" prefHeight="25.0" prefWidth="124.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <!-- Personality section -->
            <Label text="Personality Score:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextField fx:id="personalityScoreField" GridPane.columnIndex="1" GridPane.rowIndex="6" editable="false" />

            <Label text="Personality Type:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <TextField fx:id="personalityTypeField" GridPane.columnIndex="1" GridPane.rowIndex="7" editable="false" />

            <Button text="Fill Survey..." GridPane.columnIndex="1" GridPane.rowIndex="8"
                    onAction="#onFillSurveyClicked" />

            <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox spacing="10.0">
            <children>
                <Button fx:id="saveButton" onAction="#onSaveClicked" text="Save" />
                <Button fx:id="cancelButton" onAction="#onCancelClicked" text="Cancel" />
            </children>
        </HBox>
    </children>
</VBox>
