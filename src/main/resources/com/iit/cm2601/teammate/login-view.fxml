<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iit.cm2601.teammate.LoginViewController">

    <children>

        <!-- Title -->
        <Label layoutX="120.0" layoutY="60.0" prefWidth="360.0"
               text="Sports Team Builder">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <!-- Admin Login Button -->
        <Button layoutX="110.0" layoutY="180.0" prefHeight="60.0"
                prefWidth="180.0" text="Admin Login" fx:id="adminLoginBtn"
                onAction="#onAdminLoginClicked"/>

        <!-- Participant Registration Button -->
        <Button layoutX="310.0" layoutY="180.0" prefHeight="60.0"
                prefWidth="180.0" text="Participant Registration"
                fx:id="participantRegisterBtn"
                onAction="#onParticipantRegisterClicked"/>

        <!-- Exit Button -->
        <Button layoutX="520.0" layoutY="10.0" text="Exit" fx:id="exitBtn" onAction="#onExitClicked"/>

    </children>
</AnchorPane>
